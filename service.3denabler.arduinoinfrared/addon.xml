<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="service.3denabler.arduinoinfrared"
    name="3D Enabler Infrared TV"
    version="0.1.0"
    provider-name="Rob Isenberg">
  <requires>
    <import addon="xbmc.python"              version="2.14.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
    <import addon="script.module.pyserial"   version="2.7.0"/>
  </requires>
  <extension point="xbmc.service"       library="service.py" start="login"/>
  <extension point="xbmc.python.script" library="script.py"/>
  <extension point="xbmc.python.script" library="commandreceiver.py"/>
  <extension point="xbmc.python.pluginsource" library="commandreceiver.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language/>
    <summary lang="en">Switch Infrared TV into 3D mode when playing 3D movie</summary>
    <description lang="en">Once you start your 3D movie - your Arduino should blast the infrared signal commands to switch your 3D TV to respective 3D mode automatically</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
    <source>https://github.com/robji/service.3denabler.arduinoinfrared</source>
  </extension>
</addon>
